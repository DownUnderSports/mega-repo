.fixed-calendar-close-botton
  display: none

.fixed-calendar-wrapper
  position: fixed
  display: block
  top: 0
  left: 0
  right: 0
  bottom: 0
  padding: calc(20px + 5vw)
  height: 100vh
  width: 100vw
  z-index: 5000
  background: #000b
  @media (orientation: landscape) && (max-height: 400px)
    padding: 5px

  .fixed-calendar-close-botton
    display: block
    height: calc(10px + 3vw)
    width: calc(10px + 3vw)
    border-radius: 50%
    position: fixed
    top: calc(10px + 1vw)
    right: calc(10px + 1vw)
    background-color: #D55E
    color: #FFFB
    font-size: calc(5px + 1.75vw)
    padding: calc(2.5px + .25vw)
    text-align: center
    z-index: 10
    @media (orientation: landscape) && (max-height: 400px)
      top: 1rem
      right: 1rem
      height: 2rem
      width: 2rem
      font-size: 1rem
      padding: .25rem

  label
    color: #fff
    text-align: center
    font-size: 2rem

  input.form-control + label
    &
    small
      font-size: 1rem

  .fixed-calendar-modal
    position: relative
    height: 100%
    width: 100%
    background: #05A
    padding: 1rem
    border-radius: 1rem
    display: block
    // display: flex
    flex-flow: column nowrap
    justify-content: flex-start
    overflow: auto

    .size-fix
      flex: 1 1 100% !important

    .calendar-wrapper
      min-height: 75%
      &
      .calendar-holder
        position: relative !important
        padding: 0 !important
        display: flex
        height: unset
        width: 100%
        // min-height:100%
        flex: 1 0 100%

      .calendar-holder
        .calendar
          min-height: 25vh
          max-height: unset
          flex: 1
          border-radius: .25rem

          .calendar-body
            border-radius: .25rem
            min-height: unset

            .calendar-row:last-child

              .calendar-col:first-child
                border-bottom-left-radius: .25rem

              .calendar-col:last-child
                border-bottom-right-radius: .25rem

      @media (max-height:600px)
        margin-bottom: 100% !important
