html,
body,
#root,
.Site
  height: 100%

*
  box-sizing: border-box !important;

img
  max-height: 100%;
  max-width: 100%;

section
  header
    text-align: center;
  main
  .main
    text-align: left;
    margin-bottom: 2rem;
    &.card-body
      margin-bottom: unset
// .Site
  // text-align: center;

.Site-title
  font-size: 1.5em;

.Site-subtitle
  font-size: 1.15em;

.Site-main
  position: relative;
  font-size: large;
  min-height: 100%;
  min-height: 100vh;
  min-height: -webkit-calc(100vh - 31rem);
  min-height: -moz-calc(100vh - 31rem);
  min-height: calc(100vh - 31rem);

@media (max-width: 767px)
  .Site-header.static-title-mobile
    margin-top: 2rem;

    .Site-title > span
      position: fixed !important
      display: flex !important
      justify-content: center !important
      align-items: center !important
      height: 2rem !important
      overflow-x: auto !important
      overflow-y: hidden !important
      font-size: 1.25rem !important
      white-space: nowrap !important
      border-radius: 0 !important
      top: 0 !important
      left: 0 !important
      right: 0 !important
      background: #D52027 !important
      color: #FFF !important
      border-bottom: 2px solid #222 !important

.terms-section
  @media print
    z-index: 10000
    position: absolute
    top: 0
    left: 0
    &
    *
      max-width: 100vw !important
      color: #000 !important
      background: #FFF !important
      text-decoration: none !important

.Terms
  > ol
    &
    & > li
      list-style-type: decimal
    > li
      h5
        font-weight: bold
    > li > ol
      &
      & > li
        list-style-type: lower-alpha
      > li > ol
        &
        & > li
          list-style-type: lower-roman
        > li > ol
          &
          & > li
            list-style-type: decimal
.Site-special-offer
  // $special = #f35b5b
  // $special = #001080
  $special = saturation(lightness(#001080, 65%), 86%)
  position: relative
  display: block
  display: flex
  flex-flow: column nowrap
  background: #FFF
  padding: 1rem
  border: .5rem double $special
  align-items: center
  text-align: center
  justify-content: center
  color: $special
  background: #34495e
  background: radial-gradient(ellipse at center, #ffffff 0%, #e5e5e5 100%)
  background-size: 100% 100%
  margin: 0 auto

  h1
    color: $special
    font-weight: normal
    text-align: center
    font-family: cursive
    font-size: 1.75em
    @media screen and (min-width: 500px)
      font-size: 2em !important
    @media screen and (min-width: 768px)
      font-size: 2.5em !important

  .ribbon-wrapper
    font-family: 'Open Sans', sans-serif
    position: relative
    width: 100%
    z-index: 1
    flex: 1 0 100%

    .ribbon
      font-size: 1.15em !important
      text-transform: uppercase
      width: 80%
      position: relative
      background: $special
      color: #fff
      text-align: center
      padding: 1rem 2rem
      margin: 1rem auto 2rem

      @media screen and (min-width: 500px)
        font-size: 1.5em !important

      &:before
      &:after
        content: ""
        position: absolute
        display: block
        bottom: -1em
        border: 1.5em solid desaturate(darken($special, 9%), 21%)
        z-index: -1
      &:before
        left: -2em
        border-right-width: 1.5em
        border-left-color: transparent
      &:after
        right: -2em
        border-left-width: 1.5em
        border-right-color: transparent

      .ribbon-inner
        &:before
        &:after
          content: ""
          position: absolute
          display: block
          border-style: solid
          border-color: desaturate(darken($special, 20%), 30%) transparent transparent
          bottom: -1em
        &:before
          left: 0
          border-width: 1em 0 0 1em
        &:after
          right: 0
          border-width: 1em 1em 0 0
  p
    text-align: left
    font-size: 1em
    @media screen and (min-width: 500px)
      font-size: 1.25em !important

  .footnote
  .footnote-notice
    color: $special

  .footnote
    flex: 1 0 100%
    width: 100%
    font-size: .7em
    text-align: right
