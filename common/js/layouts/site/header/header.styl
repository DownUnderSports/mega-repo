.Site-header
  .fixed &
    padding-top: 6.5rem
  @media print
    display: none
    padding: 0
  .nav-wrapper
    background: #000080
    background: #FFF
    width: 100%
    margin: 0
    display: flex
    flex-flow: row nowrap
    justify-content: space-between
    align-items: center
    border-bottom: 1px solid #D40000

    .fixed &
      position: fixed
      top: 0
      z-index: 1000
      margin-bottom: 0

    nav
      @media(min-width: 768px) and (max-width: 800px)
        font-size: .9em

    .header-logo
      height: 4rem
      width: 4rem
      padding: .25rem

    div.dropdown
      position: relative
      ul.dropdown-list
        list-style: none
        margin: 0
        background: #FFFFFF
        display: none
        border: 1px dashed #000
        padding: 0 1rem

        @media(min-width: 768px)
          position: absolute
          top: 2rem
          right: 0

        li
        .nav-link
          display: block
          overflow: auto
          max-height: unset
          padding: .25rem
        li + li
          border-top: 1px solid #000

      &.true
        font-size: 1rem
        .dropdown-list
          z-index: 1000
          display: block


    .nav-link
      color: #99CCFF
      color: #000
      position: relative
      @media(min-width:768px)
        & + .nav-link
          border-left: 1px solid #000
      // & + .nav-link
      //   &:before
      //     content: '|'
      //     padding: 0 5px
      //     position: absolute
      //     left: -.5rem
      //     font-weight: normal !important
      //     font-size: 2rem !important
      // &.active
      //   color: #FFF
      //   color: #007BFF
  .social-bar
    width: 100%
    background: #222
    padding: .5rem 1rem
    height: 2.5rem
    font-size: 1.5rem
    line-height: 0
    display: flex
    flex-flow: row nowrap
    overflow: hidden
    justify-content: flex-end
    align-items: center

    .fixed &
      position: fixed
      top: 4rem
      z-index: 999

    a
      margin-left: 1rem
    svg
      width: 1.25rem
      height: 1.25rem
      color: #FFFFFF

  .header-content
    padding: 1rem
    background: #000080
    color: #FFF
    border-top: 1px solid #D40000
    border-bottom: 1px solid #D40000
    // border-bottom: 1px solid #000080

  .banner-video
    background: #444444
    padding: 2em 1em
    $special = saturation(lightness(#D52027, 65%), 86%)
    .message
      color: #FFF
      font-size: 1.25em
      width: 100%


      .ribbon-wrapper
        font-family: 'Open Sans', sans-serif
        position: relative
        width: 100%
        z-index: 1
        padding-bottom: 1em

        .ribbon
          font-size: 12px !important
          text-transform: uppercase
          width: 80%
          position: relative
          background: $special
          color: #fff
          text-align: center
          padding: 1rem 2rem
          margin: 0rem auto 1rem

          @media screen and (min-width: 520px) and (min-height: 420px)
            font-size: 16px !important
          @media screen and (min-width: 768px) and (min-height: 515px)
            font-size: 20px !important
          @media screen and (min-width: 1080px) and (min-height: 600px)
            font-size: 24px !important

          &:before
          &:after
            content: ""
            position: absolute
            display: block
            bottom: -1em
            border: 1.5em solid desaturate(darken($special, 9%), 21%)
            z-index: -1
          &:before
            left: -2em
            border-right-width: 1.5em
            border-left-color: transparent
          &:after
            right: -2em
            border-left-width: 1.5em
            border-right-color: transparent

          .ribbon-inner
            &:before
            &:after
              content: ""
              position: absolute
              display: block
              border-style: solid
              border-color: desaturate(darken($special, 20%), 30%) transparent transparent
              bottom: -1em
            &:before
              left: 0
              border-width: 1em 0 0 1em
            &:after
              right: 0
              border-width: 1em 1em 0 0

    .outer-wrapper
      width: 100%
      position: relative
      display: flex
      flex-flow: column nowrap
      justify-content: center
      align-items: center
      .outer-content
        max-width: 100%
        max-width: 115vh
        width: 100%
        position: relative
        .video-container
          box-shadow: 0 4px 15px 2px rgba(0,0,0,0.35)

  .carousel
    height: 50vh
    background-image: url('~common/assets/images/headers/bg-skyline.jpg');
    background-position: 50%;
    background-position: center center;
    background-size: cover;
    background-repeat: no-repeat;
    transition: background-image 2s ease-in-out
    background-color: #ddd
    button
      background: transparent
      border: none
    .carousel-control-next
    .carousel-control-prev
      position: absolute
      &[data-tooltip]
        &:before
          font-size: 1.5rem
          bottom: unset
    .carousel-inner
      height: 100%
      .carousel-item
        // @keyframes .slide {
        //   0%{
        //     transform: translate3d(0, 0, 0);
        //   }
        //   100%{
        //     transform: translate3d(-100%, 0, 0);
        //   }
        // }
        &.active
          display: flex
          flex-flow: row nowrap
          align-items: center
          justify-content: center
          overflow: hidden
          // &.slide-left
          //   animation: slide 60s linear;
        img
          max-height: 100%
          max-width: 100%
    .carousel-indicators
      li
        background-clip: unset
        flex: 1 1 auto
        border-top: unset
  .top-logo
    display: none
    @media screen and (min-width: 768px)
      display: inline-block
      width: 100%
      height: 100%
      max-width: 150px
      max-height: 150px
      position: absolute
      right: 5px
      bottom: 5px
      .header-link
        padding: 0
        border: none
        background: none
        height: 100%
        width: 100%
