@charset "UTF-8"

.deposit-page
  padding-top: 1rem
  padding-bottom: 1rem
  margin: 1rem 0
  .la-square-jelly-box
    height: 25vw
    width: 25vw
    max-width: 25vh
    max-height: 25vh
    margin: 10vh auto
    color: #153e7c
    div:first-child
      border: 1.5rem solid #d52027
  .close
  .grow p
    display: none
  .search
    position: absolute
    top: 5px
    top: .5rem
    left: 5px
    left: .5rem
    background-color: #222
    background-color: rgba(0, 0, 0, 0.7)
    color: #fff
  .avatar
    // @media screen and (min-width: 768px)
    //   max-width: 33%
    // @media screen and (max-width: 767px)
    //   height: 0
    //   max-height: 0
    //   overflow: hidden
    //   line-height: 0
    //   border: none
    //   zoom: 1
    //   position: fixed
    //   top: -1px
    //   z-index: 10000
  .img-wrapper
    position: relative
    transition: max-height 0.25s ease, max-width 0.25s ease
  .grow
    padding: 0
    .img-wrapper
      position: fixed
      background: rgba(0, 0, 0, 0.85)
      top: 0
      left: 0
      z-index: 10000
      width: 100vw
      height: 100vh
      max-width: 1vw
      max-height: 1vh
      overflow: auto
    .search
      display: none

    .close
      display: block
      color: #fff
      font-size: 5vh
      margin: 5vh 7vh
      border: 2px solid #fff
      width: 5vh
      height: 5vh
      border-radius: 50%
      line-height: .75
      &:hover
        background:#fff
        color: #222
  .grown
    .img-wrapper
      max-height: 100vh
      max-width: 100vw
      &[data-tooltip]:before
        display: none !important
