//-------------------------------------------
// Vars
//-------------------------------------------

// Sizing
site-content-width = rem(1700)

// Unicode Characters
non-breaking-space = '\00a0'

// Fake Text Outline
text-outline--thin = -1px -1px 0 text-color--generic,
  1px -1px 0 text-color--generic,
  -1px 1px 0 text-color--generic,
  1px 1px 0 text-color--generic,
  rem(5 5) 0 text-color--generic

base-font-size = 16px

//-------------------------------------------
// Unit Size Calculations
//-------------------------------------------

convert-px-to-rem(pixel-unit, base-font-size, unit-type)
  unit(pixel-unit / base-font-size, unit-type)

unit-calc(pixel-units, unit-type, units = false)
  if length(pixel-units) == 1
    convert-px-to-rem(pixel-units, base-font-size, unit-type)

  else
    for pixel-unit in pixel-units
      pixel-unit = convert-px-to-rem(pixel-unit, base-font-size, unit-type)

      if !units
        units = pixel-unit
      else
        units = join(' ', units, pixel-unit)

    unquote(units)

rem(args)
  unit-calc(args, 'rem')

em(args)
  unit-calc(args, 'em')


//-------------------------------------------
// Math
//-------------------------------------------

abs(n)
  if n < 0
    return n * -1
  return n

lower-bound(range)
  if length(range) <= 0
    return 0
  return range[0]

upper-bound(range)
  if length(range) < 1
    return 999999
  return range[1]


//-------------------------------------------
// Mixins
//-------------------------------------------

text()
  margin-top 0

  &:only-child
  &:last-child
    margin 0

description()
  margin-bottom rem(16)
  line-height 1.6

clearfix()
  &:before,
  &:after
    content: " "
    display: table

  &:after
    clear: both

validation()
  background-size: .75rem .75rem
  background-position: top .25rem right.25rem
  padding-right: .4rem

