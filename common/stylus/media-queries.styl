xsmall-range = (0 em(480))
small-range = (em(481) em(768))
medium-range = (em(769) em(1024))
large-range = (em(1025) em(1200))
xlarge-range = (em(1201) em(1440))
xxlarge-range = (em(1440) em(1600))
xxxlarge-range = (em(1601))

screen-only = 'only screen'
print-only = 'only print'

ie = 'screen and (-ms-high-contrast: active), (-ms-high-contrast: none)'

// Ranges
xsmall-min = '(min-width ' + lower-bound(xsmall-range) + ')'
xsmall-max = '(max-width ' + upper-bound(xsmall-range) + ')'

small-min = '(min-width ' + lower-bound(small-range) + ')'
small-max = '(max-width ' + upper-bound(small-range) + ')'

medium-min = '(min-width ' + lower-bound(medium-range) + ')'
medium-max = '(max-width ' + upper-bound(medium-range) + ')'

large-min = '(min-width ' + lower-bound(large-range) + ')'
large-max = '(max-width ' + upper-bound(large-range) + ')'

xlarge-min = '(min-width ' + lower-bound(xlarge-range) + ')'
xlarge-max = '(max-width ' + upper-bound(xlarge-range) + ')'

xxlarge-min = '(min-width ' + lower-bound(xxlarge-range) + ')'
xxlarge-max = '(max-width ' + upper-bound(xxlarge-range) + ')'

xxxlarge-min = '(min-width ' + lower-bound(xxxlarge-range) + ')'
xxxlarge-max = '(max-width ' + upper-bound(xxxlarge-range) + ')'

// Definitions
xsmall-only = screen-only + ' and ' + xsmall-max

small-up = screen-only + ' and ' + small-min
small-down = screen-only + ' and ' + small-max
small-only = screen-only + ' and ' + small-min + ' and ' + small-max

medium-up = screen-only + ' and ' + medium-min
medium-down = screen-only + ' and ' + medium-max
medium-only = screen-only + ' and ' + medium-min + ' and ' + medium-max

large-up = screen-only + ' and ' + large-min
large-down = screen-only + ' and ' + large-max
large-only = screen-only + ' and ' + large-min + ' and ' + large-max

xlarge-up = screen-only + ' and ' + xlarge-min
xlarge-down = screen-only + ' and ' + xlarge-max
xlarge-only = screen-only + ' and ' + xlarge-min + ' and ' + xlarge-max

xxlarge-up = screen-only + ' and ' + xxlarge-min
xxlarge-down = screen-only + ' and ' + xxlarge-max
xxlarge-only = screen-only + ' and ' + xxlarge-min + ' and ' + xxlarge-max

xxxlarge-up = screen-only + ' and ' + xxxlarge-min
xxxlarge-down = screen-only + ' and ' + xxxlarge-max
xxxlarge-only = screen-only + ' and ' + xxxlarge-min + ' and ' + xxxlarge-max

// Orientation
landscape = '(orientation landscape)'
landscape-only = screen-only + ' and ' + landscape

portrait = '(orientation portrait)'
portrait-only = screen-only + ' and ' + portrait
