<% provide :title, 'Down Under Sports Statement'%>
<div class="row">
  <div class="col-2" style="height: 1.5in">
    <%= image_tag wicked_pdf_asset_base64('dus-logo.png'), class: 'img-fluid', style: "max-height: 1.75in" %>
  </div>
  <div class="col-10" style="height: 1.5in">
    <br>
    <div style="font-size: .2in; text-align: right;">
      <%= "#{user.full_name} - #{user.category_title} Account Statement" %>
    </div>
    <%= render partial: 'shared/pdf/subtitle', locals: {user: user} %>
  </div>
</div>
<div class="row">
  <div class="col" style="height: .5in">
    <%= render partial: 'shared/pdf/sublink', locals: {user: user} %>
  </div>
</div>
<div id="address" style="margin-bottom: .25in; height: 1in">
  <%= render partial: 'shared/pdf/address', locals: {user: user} %>
</div>
<div class="row">
  <div id="content" class="col-12">
    <%= render partial: 'shared/pdf/statement_details', locals: {user: user} %>
  </div>
</div>
