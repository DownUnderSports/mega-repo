<%- skip_hours = nil unless defined? skip_hours -%>
<%- summer = (skip_hours == :summer) -%>
<%- skip_hours = nil if summer %>
<row>
  <% if skip_hours %>
  <columns>
    <%= render partial: 'shared/signature' %>
  </columns>
  <% else %>
  <columns small="12" large="6">
    <%= render partial: 'shared/signature' %>
  </columns>
  <columns small="12" large="6">
    <%= render partial: "shared/#{summer ? 'summer_' : ''}hours" %>
  </columns>
  <% end %>
</row>
