<div class="row mt-5">
  <div class="col">
    <%= form_for :email, url: '/admin/sampson' do |form| %>
      <div class="form-group">
        <label>Sport</label>
        <%= text_field_tag 'sport', nil, class: "form-control", placeholder: "Sport (abbr or abbr_gender)", required: true %>
      </div>
      <div class="form-group">
        <label>Subject</label>
        <%= text_field_tag 'subject', nil, class: "form-control", placeholder: "Subject", required: true %>
      </div>
      <div class="form-group">
        <label>Banner</label>
        <%= text_field_tag 'banner', nil, class: "form-control", placeholder: "Banner", required: true %>
      </div>
      <div class="form-group">
        <label>Body</label>
        <%= text_area_tag 'body', nil, class: "form-control", placeholder: "Body", rows: 10, required: true %>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-block btn-primary">Submit</button>
      </div>
    <% end %>
  </div>
</div>
