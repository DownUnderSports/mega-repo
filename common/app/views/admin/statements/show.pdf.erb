<%= render partial: 'shared/pdf/statement', locals: {user: @user} %>
<% if @direct_print %>
<script>
  (function(){
    document.addEventListener('DOMContentLoaded', function(){window.print()}, false);
    window.addEventListener("afterprint", function(){
      setTimeout(function() {
        window.location = "<%= @next_user || '/admin/users' %>".replace(/amp;/gi, '')
      }, 0)
    })
  })();
</script>
<% end %>
