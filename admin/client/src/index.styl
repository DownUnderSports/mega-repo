tooltip-attributes(pfx)
  pfx = pfx ? ('-' + pfx) : ''

  &.tooltip{pfx}-right
  &[data-tooltip{pfx}-right]:not([data-tooltip{pfx}-right=false])
    &:before
      left: auto
      right: -.25rem
      bottom: auto
      top: 50%
      transform: translate(100%, -50%) scale(0)
      transform-origin: left center
      z-index: 1000000
    &:hover:before
      transform: translate(100%, -50%) scale(1)
  &.tooltip{pfx}-left
  &[data-tooltip{pfx}-left]:not([data-tooltip{pfx}-left=false])
    &:before
      left: -.25rem
      right: auto
      bottom: auto
      top: 50%
      transform: translate(-100%, -50%) scale(0)
      transform-origin: right center
    &:hover:before
      transform: translate(-100%, -50%) scale(1)
  &.tooltip{pfx}-top
  &.tooltip{pfx}-top-right
  &.tooltip{pfx}-top-left
  &[data-tooltip{pfx}-top]:not([data-tooltip{pfx}-top=false])
  &[data-tooltip{pfx}-top-right]:not([data-tooltip{pfx}-top-right=false])
  &[data-tooltip{pfx}-top-left]:not([data-tooltip{pfx}-top-left=false])
    &:before
      bottom: auto
      top: -.25rem
      transform-origin: bottom center
    &:hover:before
      transform: translate(-50%, -100%) scale(1)
  &.tooltip{pfx}-top-right
  &[data-tooltip{pfx}-top-right]:not([data-tooltip{pfx}-top-right=false])
    &:before
      left: auto
      right: 0
      transform: translateY(-100%) scale(0)
      transform-origin: right bottom
    &:hover:before
      transform: translateY(-100%) scale(1)
  &.tooltip{pfx}-top-left
  &[data-tooltip{pfx}-top-left]:not([data-tooltip{pfx}-top-left=false])
    &:before
      left: 0
      right: auto
      transform: translateY(-100%) scale(0)
      transform-origin: left bottom
    &:hover:before
      transform: translateY(-100%) scale(1)
  &.tooltip{pfx}-bottom-right
  &.tooltip{pfx}-bottom-left
  &[data-tooltip{pfx}-bottom-right]:not([data-tooltip{pfx}-bottom-right=false])
  &[data-tooltip{pfx}-bottom-left]:not([data-tooltip{pfx}-bottom-left=false])
    &:before
      bottom: -.25rem
      top: auto
  &.tooltip{pfx}-bottom-right
  &[data-tooltip{pfx}-bottom-right]:not([data-tooltip{pfx}-bottom-right=false])
    &:before
      left: auto
      right: 0px
      transform: translateY(100%) scale(0)
      transform-origin: right top
    &:hover:before
      transform: translateY(100%) scale(1)
  &.tooltip{pfx}-bottom-left
  &[data-tooltip{pfx}-bottom-left]:not([data-tooltip{pfx}-bottom-left=false])
    &:before
      left: 0px
      right: auto
      transform: translateY(100%) scale(0)
      transform-origin: left top
    &:hover:before
      transform: translateY(100%) scale(1)
  &[data-tooltip{pfx}='']
    &:before
      display: none
  &.tooltip{pfx}-enabled
  &[data-tooltip{pfx}-enabled]:not([data-tooltip{pfx}-enabled=false])
    &:before
      display: block!important
  &.tooltip{pfx}-disabled
  &[data-tooltip{pfx}-disabled]:not([data-tooltip{pfx}-disabled=false])
    &:before
      display: none!important
  &.tooltip{pfx}-nowrap
  &[data-tooltip{pfx}-nowrap]:not([data-tooltip{pfx}-nowrap=false])
    &:before
      white-space: nowrap!important

